{
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended"
    ],
    "plugins": ["react"],
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off",
        "eqeqeq": "error",
        "curly": "error",
        "no-undef": "error",
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-redeclare": "error",
        "no-multiple-empty-lines": ["error", { "max": 1 }],
        "no-trailing-spaces": "error",
        "prefer-const": "error",
        "comma-dangle": ["error", "never"],
        "react/react-in-jsx-scope": "off",
        "padding-line-between-statements": ["error", { "blankLine": "always", "prev": "*", "next": "return" }]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
